    <EditText
        android:id="@+id/DOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/birthDate"
        android:inputType="date" 
        android:textColor="#800080"
         android:textColorHint="#800080"/>

