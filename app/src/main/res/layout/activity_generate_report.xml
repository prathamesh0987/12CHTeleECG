        <EditText
            android:id="@+id/txtMedication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/medications"
            android:inputType="text"
            android:textColor="#800080"
            android:textColorHint="#800080" />

